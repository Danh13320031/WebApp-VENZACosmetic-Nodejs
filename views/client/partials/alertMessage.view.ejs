<% if (messages.alertSuccess) { %>
<div class="p-2 bg-success-subtle shadow alert-message" data-time="3000">
  <div class="p-1 alert-message-container" style="background: var(--light-gray-color)">
    <div
      class="d-flex p-2 bg-success-subtle justify-content-between align-items-center alert-message-box"
    >
      <div
        class="d-flex gap-2 align-items-center alert-message-content"
        style="color: var(--success-color)"
      >
        <div class="alert-message-icon">
          <i class="title-font bi bi-check-circle"></i>
        </div>
        <div class="alert-message-text">
          <p class="fs-6 fw-bold mb-0"><%= messages.alertSuccess %></p>
        </div>
      </div>
    </div>
  </div>
</div>
<% } %>

