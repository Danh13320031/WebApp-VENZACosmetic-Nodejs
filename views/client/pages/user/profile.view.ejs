<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include('../../partials/seoMeta.view.ejs', { pageTitle: pageTitle}) %>

    <!-- Styles File -->
    <link rel="stylesheet" href="/client/setup.css" />
    <link rel="stylesheet" href="/client/styles/partials/alert.css" />
    <link rel="stylesheet" href="/client/styles/partials/header.css" />
    <link rel="stylesheet" href="/client/styles/pages/index/index.css" />
    <link rel="stylesheet" href="/client/styles/pages/index/index.responsive.css" />
    <link rel="stylesheet" href="/client/styles/partials/breadcrumb.css" />
    <link rel="stylesheet" href="/client/styles/pages/user/profile.css" />
    <link rel="stylesheet" href="/client/styles/partials/footer.css" />
    <!-- End Styles File -->

    <!-- Styles Library & Framework Link -->
    <!-- Bootstrap -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />
    <!-- BoxIcon -->
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />
    <!-- SlickSlide -->
    <link
      rel="stylesheet"
      type="text/css"
      href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"
    />
    <!-- End Styles Library & Framework Link -->
  </head>
  <body>
    <%-include('../../partials/alertMessage.view.ejs') %>
    <%-include('../../partials/header.view.ejs', { categoryListTree: categoryTree, homeActive: "",
    aboutActive: '', productActive: '', newsActive: '', contactActive: '', cartActive: '' }); %>
    <%-include("../../partials/headerMobile.view.ejs") %>

    <main class="main">
      <%-include('../../partials/breadcrumb.view.ejs', { pageTitle: pageTitle, pageUrl: pageUrl })%>
      <h3 class="heading-font text-center pt-0">Thông tin cá nhân</h3>

      <section class="profile">
        <form
          action="/user/profile?_method=PATCH"
          method="POST"
          enctype="multipart/form-data"
          class="profile-info-form"
          id="form-handle"
        >
          <div class="container">
            <div class="row gap-md-0 gap-3">
              <div class="col-lg-3 col-md-4 col-12">
                <div class="d-flex flex-column gap-3 profile-avatar">
                  <div class="p-2 border border-1 position-relative profile-avatar-box">
                    <img
                      src="<%= user.avatar %>"
                      alt="profile-avatar"
                      width="100%"
                      class="image-upload profile-avatar"
                    />
                    <div
                      class="position-absolute top-0 start-0 z-index-1 w-100 h-100 bg-black d-flex justify-content-center align-items-center profile-avatar-overlay"
                    >
                      <div
                        class="w-50 h-50 d-flex justify-content-center align-items-center border border-1 profile-avatar-icon-box"
                      >
                        <i class="heading-font text-white bi bi-camera"></i>
                      </div>
                    </div>
                  </div>
                  <div class="profile-avatar-input">
                    <label for="avatar" class="title-font fw-bold">Đổi ảnh đại diện</label>
                    <input
                      type="file"
                      name="avatar"
                      id="avatar"
                      accept="image/*"
                      input-upload-image
                      class="input-type01 w-100"
                    />
                  </div>
                </div>
              </div>
              <div class="col-lg-9 col-md-8 col-12">
                <div class="d-flex flex-column gap-3">
                  <div class="d-flex gap-3 flex-wrap">
                    <div
                      class="d-flex flex-column flex-fill form-group profile-info-form-input profile-info-form-fullname"
                    >
                      <label for="fullname" class="title-font fw-bold">Họ và tên</label>
                      <input
                        type="text"
                        name="fullname"
                        id="fullname"
                        value="<%= user.fullname %>"
                        placeholder="Nhập họ và tên..."
                        class="input-type01"
                      />
                      <span
                        class="profile-info-form-error"
                        style="color: var(--error-color); font-size: var(--error-font-size)"
                      ></span>
                    </div>

                    <div
                      class="d-flex flex-column flex-fill form-group profile-info-form-input profile-info-form-phone"
                    >
                      <label for="phone" class="title-font fw-bold">Số điện thoại</label>
                      <input
                        type="text"
                        name="phone"
                        id="phone"
                        value="<%= user.phone %>"
                        placeholder="Nhập số điện thoại..."
                        class="input-type01"
                      />
                      <span
                        class="profile-info-form-error"
                        style="color: var(--error-color); font-size: var(--error-font-size)"
                      ></span>
                    </div>
                  </div>

                  <div class="d-flex gap-3 flex-wrap">
                    <div
                      class="d-flex flex-column flex-fill form-group profile-info-form-input profile-info-form-email"
                    >
                      <label for="email" class="title-font fw-bold">Địa chi email</label>
                      <input
                        type="email"
                        name="email"
                        id="email"
                        value="<%= user.email %>"
                        placeholder="Nhập địa chi email..."
                        class="input-type01"
                      />
                      <span
                        class="profile-info-form-error"
                        style="color: var(--error-color); font-size: var(--error-font-size)"
                      ></span>
                    </div>

                    <div class="d-flex flex-column flex-fill form-group">
                      <label for="birthDay" class="title-font fw-bold">Ngày sinh</label>
                      <input
                        type="date"
                        name="birthDay"
                        id="birthDay"
                        value="<%= user.birthDay %>"
                        placeholder="Nhập ngày sinh..."
                        class="input-type01"
                      />
                    </div>
                  </div>

                  <div class="d-flex flex-column form-group">
                    <label for="address" class="title-font fw-bold">Địa chi</label>
                    <input
                      type="text"
                      name="address"
                      id="address"
                      value="<%= user.address %>"
                      placeholder="Nhập địa chi..."
                      class="input-type01"
                    />
                  </div>

                  <div class="d-flex gap-3 flex-wrap">
                    <div
                      class="d-flex flex-column flex-fill form-group profile-info-form-input profile-info-form-password"
                    >
                      <label for="password" class="title-font fw-bold">Mật khẩu</label>
                      <div class="d-flex align-items-center">
                        <input
                          type="password"
                          name="password"
                          id="password"
                          placeholder="Nhập mật khẩu..."
                          class="input-type01 flex-fill"
                        />
                        <button type="button" class="button-icon-primary h-100 auth-show-password">
                          <i class="bi bi-eye-slash"></i>
                        </button>
                      </div>
                      <span
                        class="profile-info-form-error"
                        style="color: var(--error-color); font-size: var(--error-font-size)"
                      ></span>
                    </div>

                    <div
                      class="d-flex flex-column flex-fill form-group profile-info-form-input profile-info-form-confirm"
                    >
                      <label for="confirmPassword" class="title-font fw-bold"
                        >Xác nhận mật khẩu</label
                      >
                      <div class="d-flex align-items-center">
                        <input
                          type="password"
                          name="confirmPassword"
                          id="confirmPassword"
                          placeholder="Xác nhận mật khẩu..."
                          class="input-type01 flex-fill"
                        />
                        <button type="button" class="button-icon-primary h-100 auth-show-password">
                          <i class="bi bi-eye-slash"></i>
                        </button>
                      </div>
                      <span
                        class="profile-info-form-error"
                        style="color: var(--error-color); font-size: var(--error-font-size)"
                      ></span>
                    </div>
                  </div>

                  <div class="d-flex flex-column form-group">
                    <button type="submit" class="button-secondary">Cập nhật</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </form>
      </section>

      <h3 class="heading-font text-center">Mã giảm giá của tôi</h3>
    </main>

    <%-include('../../partials/footer.view.ejs') %>

    <form
      action="/cart/delete"
      method="POST"
      class="d-none form-delete-product-cart"
      id="form-delete-product-cart"
    ></form>

    <form
      action="/cart/change-quantity"
      method="POST"
      class="d-none form-change-quantity-cart"
      id="form-change-quantity-cart"
    ></form>

    <!-- Scripts File -->
    <script src="/client/scripts/alertMessage.js"></script>
    <script src="/client/scripts/toggleHeaderMobile.js"></script>
    <script src="/client/scripts/product/toggleSearchProduct.js"></script>
    <script src="/client/scripts/cart/deleteProductInCart.js"></script>
    <script src="/client/scripts/cart/changeProductQuantity.js"></script>
    <script src="/client/scripts/previewImage.js"></script>
    <script src="/client/scripts/auth/showHidePassword.js"></script>
    <script src="/client/scripts/user/submitProfileForm.js"></script>
    <!-- End Scripts File -->

    <!-- Scripts Library & Framework Link -->
    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- FontAwesome -->
    <script src="https://kit.fontawesome.com/aaf479b433.js" crossorigin="anonymous"></script>
    <!-- SlickSlide -->
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script
      type="text/javascript"
      src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"
    ></script>
    <script type="text/javascript" src="/client/scripts/slickslide.js"></script>

    <!-- <script src="./scripts/googlemap.js"></script> -->
    <!-- End Scripts Library & Framework Link -->
    <script
      src="https://cdn.tiny.cloud/1/j8bmm28z8l7u8m5at9v64rveeytj143ibxpezl0aks1g6uzx/tinymce/8/tinymce.min.js"
      referrerpolicy="origin"
      crossorigin="anonymous"
    ></script>
    <script src="/client/scripts/tinymce.js"></script>

    <script src="/reload/reload.js"></script>
  </body>
</html>
