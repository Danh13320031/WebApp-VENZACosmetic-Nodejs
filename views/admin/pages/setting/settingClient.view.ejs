<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include("../../partials/seoMeta.view.ejs", { pageTitle: pageTitle}) %>

    <!-- Style Library & Framework -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />

    <!-- Style File -->
    <link rel="stylesheet" href="/admin/setup.css" />
    <link rel="stylesheet" href="/admin/styles/partials/alert.css" />
    <link rel="stylesheet" href="/admin/styles/partials/header.css" />
    <link rel="stylesheet" href="/admin/styles/partials/sider.css" />
    <link rel="stylesheet" href="/admin/styles/partials/footer.css" />
    <link rel="stylesheet" href="/admin/styles/pages/setting/setting.css" />
  </head>
  <body>
    <%-include("../../partials/header.view.ejs") %>

    <div class="body">
      <%-include("../../partials/sider.view.ejs") %>
      <div class="main">
        <%-include("../../partials/alertMessage.view.ejs") %>
        <h1 class="heading-font text-primary py-0 text-start"><%= pageTitle %></h1>
        <div class="d-flex flex-column gap-5 setting">
          <div class="setting-client">
            <form
              action="<%= prefixAdmin %>/settings/client?_method=PATCH"
              method="POST"
              enctype="multipart/form-data"
              id="form-handle"
              class="setting-client"
            >
              <div class="container-fluid">
                <div class="row">
                  <div class="col-lg-6 col-12">
                    <div class="form-group mb-4">
                      <div class="image-box mb-4">
                        <div class="mb-4 d-flex jutify-content-end w-100 image-delete-box">
                          <i class="bi bi-x-lg float-end mb-2 image-delete setting-client-logo"></i>
                        </div>
                        <div class="d-flex justify-content-center image-upload-box">
                          <img src="<%= clientWebsite ? clientWebsite.logo : "" %>" alt="Hiển thị
                          logo trang quản trị" class="image-upload setting-client-logo" />
                        </div>
                      </div>
                      <label for="logo" class="fw-bold"
                        ><span class="text-danger"><b>*</b></span> Ảnh Logo (.png)</label
                      >
                      <input
                        type="file"
                        name="logo"
                        accept="image/*"
                        class="form-control setting-client-logo"
                        id="logo"
                        input-upload-image
                      />
                      <input type="hidden" name="logo" class="input-hidden setting-client-logo"
                      value="<%= clientWebsite ? clientWebsite.logo : "" %>">
                    </div>
                  </div>

                  <div class="col-lg-6 col-12">
                    <div class="form-group mb-4">
                      <div class="image-box mb-4">
                        <div class="mb-4 d-flex jutify-content-end w-100 image-delete-box">
                          <i
                            class="bi bi-x-lg float-end mb-2 image-delete setting-client-favicon"
                          ></i>
                        </div>
                        <div class="d-flex justify-content-center image-upload-box">
                          <img src="<%= clientWebsite ? clientWebsite.favicon : "" %>" alt="Hiển thị
                          favicon trang quản trị" class="image-upload setting-client-favicon" />
                        </div>
                      </div>
                      <label for="favicon" class="fw-bold"
                        ><span class="text-danger"><b>*</b></span> Ảnh Favicon (.png)</label
                      >
                      <input
                        type="file"
                        name="favicon"
                        accept="image/*"
                        class="form-control setting-client-favicon"
                        id="favicon"
                        input-upload-image
                      />
                      <input type="hidden" name="favicon" class="input-hidden
                      setting-client-favicon" value="<%= clientWebsite ? clientWebsite.favicon : ""
                      %>">
                    </div>
                  </div>
                </div>

                <button type="submit" class="btn btn-outline-primary w-100 form-create">
                  <i class="bi bi-pencil-square me-1"></i>Cập nhật
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <%- include("../../partials/footer.view.ejs") %>

    <!-- Script File -->
    <script src="/admin/scripts/showAlert.js"></script>
    <script src="/admin/scripts/sidebarToggle.js"></script>
    <script src="/admin/scripts/activeSidebarLink.js"></script>
    <script src="/admin/scripts/previewImage.js"></script>
    <script src="/admin/scripts/toggleAccountInfo.js"></script>
    <script src="/admin/scripts/setting/addAddressItem.js"></script>
    <script src="/admin/scripts/setting/addKeywordItem.js"></script>
    <script src="/admin/scripts/setting/deleteAddressItem.js"></script>
    <script src="/admin/scripts/setting/deleteKeywordItem.js"></script>

    <!-- Script Library & Framwork -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/aaf479b433.js" crossorigin="anonymous"></script>

    <script src="../../reload/reload.js"></script>
  </body>
</html>
