<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include("../../partials/seoMeta.view.ejs", { pageTitle: pageTitle}) %>

    <!-- Style Library & Framework -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />

    <!-- Style File -->
    <link rel="stylesheet" href="/admin/setup.css" />
    <link rel="stylesheet" href="/admin/styles/partials/alert.css" />
    <link rel="stylesheet" href="/admin/styles/partials/header.css" />
    <link rel="stylesheet" href="/admin/styles/partials/sider.css" />
    <link rel="stylesheet" href="/admin/styles/pages/dashboard/dashboard.css" />
    <link rel="stylesheet" href="/admin/styles/partials/footer.css" />
  </head>
  <body>
    <%-include("../../partials/header.view.ejs") %>

    <div class="body">
      <%-include("../../partials/sider.view.ejs") %>
      <div class="main">
        <%-include("../../partials/alertMessage.view.ejs") %>
        <h1 class="heading-font text-primary py-0 text-start"><%= pageTitle %></h1>
        <div class="row mb-3">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <div class="title-font card-title">Thông tin tài khoản</div>
              </div>
              <div class="card-body">
                <div
                  class="d-block d-md-flex justify-content-between flex-wrap gap-2 dashboard-account"
                >
                  <div class="d-md-flex d-block align-items-start gap-2 dashboard-account-box">
                    <div class="dashboard-account-image">
                      <img
                        src="<%= accountLogin.avatar %>"
                        alt=""
                        class="rounded-2 dashboard-account-avatar"
                      />
                    </div>
                    <div class="w-100 mt-2 mt-md-0 dashboard-account-info">
                      <ul class="ps-0 mb-0 d-flex flex-column gap-1 dashboard-account-list">
                        <li class="d-flex align-items-center gap-1 dashboard-account-item">
                          <span class="fs-6 text-wrap dashboard-account-value">
                            <b>Họ và tên: </b>
                          </span>
                          <h5 class="mb-0 text-primary text-wrap dashboard-account-value">
                            <%= accountLogin.fullName %>
                          </h5>
                        </li>
                        <li class="dashboard-account-item">
                          <span class="fs-6 text-wrap dashboard-account-value">
                            <b>Địa chỉ email: </b><%= accountLogin.email %>
                          </span>
                        </li>
                        <li class="dashboard-account-item">
                          <span class="fs-6 text-wrap dashboard-account-value">
                            <b>Số điện thoại: </b><%= accountLogin.phone %>
                          </span>
                        </li>
                        <li class="dashboard-account-item">
                          <span class="fs-6 text-wrap dashboard-account-value">
                            <b>Phân quyền: </b>
                          </span>
                          <span
                            class="badge badge-primary dashboard-account-value"
                            style="background: var(--info-color-admin)"
                          >
                            <%= roleAuth.title %>
                          </span>
                        </li>
                        <li class="dashboard-account-item">
                          <% if (accountLogin.status === 'active') { %>
                          <span class="fs-6 text-wrap dashboard-account-value">
                            <b>Trạng thái: </b>
                          </span>
                          <span
                            class="badge badge-primary dashboard-account-value"
                            style="background: var(--success-color-admin)"
                          >
                            Hoạt động
                          </span>
                          <% } else { %>
                          <span class="fs-6 text-wrap dashboard-account-value">
                            <b>Trạng thái: </b>
                          </span>
                          <span
                            class="badge badge-primary dashboard-account-value"
                            style="background: var(--warning-color-admin)"
                          >
                            Ngừng hoạt động
                          </span>
                          <% } %>
                        </li>
                      </ul>
                    </div>
                  </div>
                  <div
                    class="d-block mt-2 mt-md-0 d-md-flex justify-content-end align-items-end gap-2 dashboard-account-button"
                  >
                    <a
                      href="<%= prefixAdmin %>/profile/update"
                      class="btn btn-primary dashboard-account-button-update"
                      ><i class="me-1 bi bi-pencil-square"></i>Chỉnh sửa</a
                    >
                    <a
                      href="<%= prefixAdmin %>/auth/logout"
                      class="btn btn-outline-primary dashboard-account-button-update"
                      >Đăng xuất <i class="ms-1 bi bi-box-arrow-right"></i
                    ></a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-6 col-12 mb-3">
            <div class="card">
              <div class="card-body bg-primary-subtle border border-primary rounded">
                <h5 class="card-title">Special title treatment</h5>
                <p class="card-text">
                  With supporting text below as a natural lead-in to additional content.
                </p>
                <a href="#" class="btn btn-primary">Sản phẩm</a>
              </div>
            </div>
          </div>

          <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-6 col-12 mb-3">
            <div class="card">
              <div class="card-body bg-primary-subtle border border-primary rounded">
                <h5 class="card-title">Special title treatment</h5>
                <p class="card-text">
                  With supporting text below as a natural lead-in to additional content.
                </p>
                <a href="#" class="btn btn-primary">Danh mục</a>
              </div>
            </div>
          </div>

          <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-6 col-12 mb-3">
            <div class="card">
              <div class="card-body bg-primary-subtle border border-primary rounded">
                <h5 class="card-title">Special title treatment</h5>
                <p class="card-text">
                  With supporting text below as a natural lead-in to additional content.
                </p>
                <a href="#" class="btn btn-primary">Đơn hàng</a>
              </div>
            </div>
          </div>

          <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-6 col-12 mb-3">
            <div class="card">
              <div class="card-body bg-primary-subtle border border-primary rounded">
                <h5 class="card-title">Special title treatment</h5>
                <p class="card-text">
                  With supporting text below as a natural lead-in to additional content.
                </p>
                <a href="#" class="btn btn-primary">Tài khoản</a>
              </div>
            </div>
          </div>

          <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-6 col-12 mb-3">
            <div class="card">
              <div class="card-body bg-primary-subtle border border-primary rounded">
                <h5 class="card-title">Special title treatment</h5>
                <p class="card-text">
                  With supporting text below as a natural lead-in to additional content.
                </p>
                <a href="#" class="btn btn-primary">Nhóm quyền</a>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-12">
            <canvas id="myChart"></canvas>
          </div>
        </div>
      </div>
    </div>

    <%-include("../../partials/footer.view.ejs") %>

    <!-- Script File -->
    <script src="/admin/scripts/showAlert.js"></script>
    <script src="/admin/scripts/sidebarToggle.js"></script>
    <script src="/admin/scripts/activeSidebarLink.js"></script>
    <script src="/admin/scripts/toggleAccountInfo.js"></script>

    <!-- Script Library & Framwork -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/aaf479b433.js" crossorigin="anonymous"></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/4.4.1/chart.min.js"
      integrity="sha512-L0Shl7nXXzIlBSUUPpxrokqq4ojqgZFQczTYlGjzONGTDAcLremjwaWv5A+EDLnxhQzY5xUZPWLOLqYRkY0Cbw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/admin/scripts/configs/chartjs.js"></script>

    <script src="../reload/reload.js"></script>
  </body>
</html>
