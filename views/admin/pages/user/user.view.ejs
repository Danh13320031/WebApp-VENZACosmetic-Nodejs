<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include("../../partials/seoMeta.view.ejs", { pageTitle: pageTitle}) %>

    <!-- Style Library & Framework -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />

    <!-- Style File -->
    <link rel="stylesheet" href="/admin/setup.css" />
    <link rel="stylesheet" href="/admin/styles/partials/alert.css" />
    <link rel="stylesheet" href="/admin/styles/partials/header.css" />
    <link rel="stylesheet" href="/admin/styles/partials/sider.css" />
    <link rel="stylesheet" href="/admin/styles/partials/footer.css" />
  </head>
  <body>
    <%-include("../../partials/header.view.ejs") %>

    <div class="body">
      <%-include("../../partials/sider.view.ejs") %>

      <div class="main">
        <%-include("../../partials/alertMessage.view.ejs") %> <%
        if(roleAuth.permission.includes("account-view")) { %>
        <div class="row">
          <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-4 col-sm-12 col-12">
            <h1 class="heading-font text-primary py-0 text-start"><%= pageTitle %></h1>
          </div>
          <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-4 col-sm-12 col-12"></div>
          <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-4 col-sm-12 col-12">
            <%-include("../../partials/search.view.ejs", { placeholder: "Nhập tên người dùng..."})
            %>
          </div>
        </div>

        <div class="card mb-3">
          <div class="title-font card-header">Bộ lọc</div>
          <div class="card-body">
            <div class="container-fluid">
              <div class="row">
                <div class="col-lg-4 col-md-4 col-12">
                  <%-include("../../partials/statusFilter.view.ejs") %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="card mb-3">
          <div class="title-font card-header">
            Danh sách (trang hiện tại: <%= objPagination.currentPage %>)
          </div>
          <div class="card-body">
            <div class="container-fluid">
              <div class="row gap-lg-0 gap-2 justify-content-between">
                <div class="col-lg-5 col-12">
                  <%-include("../../partials/changeMulti.view.ejs", { statusList: statusList, url:
                  'users', type: 'user' }) %>
                </div>
                <div class="col-lg-4 col-12">
                  <% if(roleAuth.permission.includes("account-add")) { %>
                  <a
                    href="<%= prefixAdmin %>/users/create"
                    class="btn btn-primary w-100 float-end mb-2"
                    ><i class="bi bi-plus-lg me-1"></i>
                    Thêm mới tài khoản
                  </a>
                  <% } %>
                </div>
              </div>
            </div>

            <div class="container-fluid">
              <div class="row">
                <div class="col-12 overflow-x-scroll">
                  <% if (userList.length === 0) {%>
                  <div class="text-center text-white bg-danger p-2">
                    Không tìm thấy người dùng nào
                  </div>
                  <% } %>
                  <table class="table table-hover table-sm">
                    <thead class="content-font">
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        <input type="checkbox" name="checkall" class="me-5" />STT
                      </th>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        Ảnh đại diện
                      </th>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        Họ & Tên
                      </th>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        Email
                      </th>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        Số điện thoại
                      </th>
                      <% if(roleAuth.permission.includes("account-change-status")) { %>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        Trạng thái
                      </th>
                      <% } %> <% if(roleAuth.permission.includes("account-update") ||
                      roleAuth.permission.includes("account-sort-delete")) { %>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        Hành động
                      </th>
                      <% } %>
                    </thead>

                    <tbody class="content-font">
                      <% if(userList && userList.length > 0) { %>
                      <!-- <div></div> -->
                      <% userList.forEach((user, index) => { %>
                      <tr title="<%= user.title %>">
                        <td>
                          <input
                            type="checkbox"
                            name="checkid"
                            value="<%= user._id %>"
                            class="me-5"
                          />
                          <%= index + 1 %>
                        </td>
                        <td>
                          <img src="<%= user.avatar %>" alt="<%= user.fullname %>" width="100px" />
                        </td>
                        <td><%= user.fullname %></td>
                        <td><%= user.email %></td>
                        <td><%= user.phone %></td>
                        <% if(roleAuth.permission.includes("account-change-status")) { %>
                        <td>
                          <% if(user.status === 'active') { %>
                          <a
                            href="javascript:;"
                            data-id="<%= user._id %>"
                            data-status="active"
                            change-status
                            class="badge"
                            style="background: var(--success-color-admin)"
                            >Hoạt động
                          </a>
                          <% } else { %>
                          <a
                            href="javascript:;"
                            data-id="<%= user._id %>"
                            data-status="inactive"
                            change-status
                            class="badge"
                            style="background: var(--warning-color-admin)"
                            >Ngừng hoạt động
                          </a>
                          <% } %>
                        </td>
                        <% } %>
                        <td>
                          <% if(roleAuth.permission.includes("account-update")) { %>
                          <a
                            href="<%= prefixAdmin %>/users/update/<%= user._id %>"
                            data-id="<%= user._id %>"
                            class="btn btn-primary btn-sm mb-1 btn-update"
                          >
                            <i class="bi bi-pencil-square me-1"></i>Sửa
                          </a>
                          <% } %> <% if(roleAuth.permission.includes("account-sort-delete")) { %>
                          <button
                            class="btn btn-danger btn-sm ml-1 mb-1 btn-delete"
                            data-id="<%= user._id %>"
                          >
                            <i class="bi bi-trash3 me-1"></i>Xóa
                          </button>
                          <% } %>
                        </td>
                      </tr>
                      <% }) %> <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-9 col-md-9 col-12">
              <%-include("../../partials/pagination.view.ejs") %>
            </div>
            <div class="col-lg-3 col-md-3 col-12">
              <a href="<%= prefixAdmin %>/users/garbage" class="btn btn-primary float-end"
                ><i class="bi bi-trash me-2"></i>Thùng rác
              </a>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>

    <%-include("../../partials/footer.view.ejs") %>

    <form action="<%= prefixAdmin %>/users" method="POST" class="d-none" form-change-status></form>
    <form action="<%= prefixAdmin %>/users" method="POST" class="d-none" form-delete></form>

    <!-- Script File -->
    <script src="/admin/scripts/showAlert.js"></script>
    <script src="/admin/scripts/sidebarToggle.js"></script>
    <script src="/admin/scripts/activeSidebarLink.js"></script>
    <script src="/admin/scripts/statusFilter.js"></script>
    <script src="/admin/scripts/search.js"></script>
    <script src="/admin/scripts/pagination.js"></script>
    <script src="/admin/scripts/changeStatus.js"></script>
    <script src="/admin/scripts/changeMulti.js"></script>
    <script src="/admin/scripts/delete.js"></script>
    <script src="/admin/scripts/toggleAccountInfo.js"></script>

    <!-- Script Library & Framwork -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/aaf479b433.js" crossorigin="anonymous"></script>
    <script src="../reload/reload.js"></script>
  </body>
</html>
