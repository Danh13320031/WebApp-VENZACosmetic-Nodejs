<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include("../../partials/seoMeta.view.ejs", { pageTitle: pageTitle}) %>

    <!-- Style Library & Framework -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />

    <!-- Style File -->
    <link rel="stylesheet" href="/admin/setup.css" />
    <link rel="stylesheet" href="/admin/styles/partials/alert.css" />
    <link rel="stylesheet" href="/admin/styles/partials/header.css" />
    <link rel="stylesheet" href="/admin/styles/partials/sider.css" />
  </head>
  <body>
    <%-include("../../partials/header.view.ejs") %>

    <div class="body">
      <%-include("../../partials/sider.view.ejs") %>
      <div class="main">
        <%-include("../../partials/alertMessage.view.ejs") %> <%
        if(roleAuth.permission.includes('product-update')) { %>
        <h1 class="heading-font text-primary py-0 text-start"><%= pageTitle %></h1>
        <form
          action="<%= prefixAdmin %>/products/update/<%= product._id %>?_method=PATCH"
          method="POST"
          enctype="multipart/form-data"
          id="form-handle"
        >
          <div class="container-fluid">
            <div class="row">
              <div class="col-6">
                <div class="form-group mb-4">
                  <label for="title" class="fw-bold"
                    ><span class="text-danger"><b>*</b></span>
                    Tiêu đề
                  </label>
                  <input
                    type="text"
                    value="<%= product.title %>"
                    name="title"
                    required
                    class="form-control"
                    id="title"
                  />
                </div>
              </div>

              <div class="col-6">
                <div class="form-group mb-4">
                  <label for="category" class="fw-bold"
                    ><span class="text-danger"><b>*</b></span>
                    Danh mục
                  </label>
                  <%# <input type="text" name="parent_id" id="parent_id" class="form-control" /> %>
                  <select name="category" id="category" class="form-control">
                    <option disabled>-- Chọn danh mục --</option>
                    <% if(categoryList.length > 0) {%>
                    <%-include("../../partials/selecttree.view.ejs", {categoryList, level: 1,
                    parent_id: product.category}) %> <% } %>
                  </select>
                </div>
              </div>

              <div class="col-12">
                <div class="form-group mb-4">
                  <label for="description" class="fw-bold">Mô tả ngắn</label>
                  <textarea name="description" class="form-control" id="description">
<%= product.description %></textarea
                  >
                </div>
              </div>

              <div class="col-12">
                <div class="form-group mb-4">
                  <label for="detail" class="fw-bold"
                    ><span class="text-danger"><b>*</b></span>
                    Mô tả chi tiết
                  </label>
                  <textarea name="detail" class="form-control" id="detail">
                    <%= product.detail %>
                  </textarea>
                </div>
              </div>

              <div class="col-6">
                <div class="form-group mb-4">
                  <label for="price" class="fw-bold"
                    ><span class="text-danger"><b>*</b></span>
                    Giá (đ)
                  </label>
                  <input
                    type="number"
                    value="<%= product.price %>"
                    min="0"
                    step="0.01"
                    name="price"
                    placeholder="Ví dụ: 45.34, 5.5, 70.56,..."
                    required
                    class="form-control"
                    id="price"
                  />
                </div>
              </div>

              <div class="col-6">
                <div class="form-group mb-4">
                  <label for="discount" class="fw-bold">Giảm giá (%)</label>
                  <input
                    type="number"
                    value="<%= product.discount %>"
                    min="0"
                    step="0.01"
                    name="discount"
                    placeholder="Ví dụ: 10.3, 5.5, 7,..."
                    required
                    class="form-control"
                    id="discount"
                  />
                </div>
              </div>

              <div class="col-6">
                <div class="form-group mb-4">
                  <label for="stock" class="fw-bold">Số lượng</label>
                  <input
                    type="number"
                    value="<%= product.stock %>"
                    min="0"
                    name="stock"
                    required
                    class="form-control"
                    id="stock"
                  />
                </div>
              </div>

              <div class="col-6">
                <div class="form-group mb-4">
                  <label for="position" class="fw-bold">Vị trí</label>
                  <input
                    type="number"
                    value="<%= product.position %>"
                    name="position"
                    min="1"
                    placeholder="Tự động tăng"
                    class="form-control"
                    id="position"
                  />
                </div>
              </div>

              <div class="col-6">
                <div class="form-group mb-4">
                  <label for="warranty" class="fw-bold">Bảo hành</label>
                  <input
                    type="text"
                    value="<%= product.warranty %>"
                    name="warranty"
                    placeholder="Ví dụ: 1 year, 1.5 months, 2 years, lifetime,..."
                    class="form-control"
                    id="warranty"
                  />
                </div>
              </div>

              <div class="col-6">
                <div class="form-group mb-4">
                  <label for="brand" class="fw-bold">Thương hiệu</label>
                  <input
                    type="text"
                    value="<%= product.brand %>"
                    name="brand"
                    placeholder="Ví dụ: Chanel, La Roche-Posay,..."
                    class="form-control"
                    id="brand"
                  />
                </div>
              </div>

              <div class="col-6">
                <div class="form-group mb-4">
                  <label for="rating" class="fw-bold">
                    Đánh giá <% for(let i = 1; i <= product.rating; i++) {%>
                    <i class="bi bi-star-fill text-warning"></i>
                    <% } %>
                  </label>
                  <input
                    type="number"
                    value="<%= product.rating %>"
                    min="0"
                    max="5"
                    step="1"
                    name="rating"
                    placeholder="Ví dụ: 5, 4, 3, 2, 1"
                    class="form-control"
                    id="rating"
                  />
                </div>
              </div>

              <div class="col-6">
                <div class="form-group mb-4">
                  <label for="shipping_fee" class="fw-bold">Phí vận chuyển (đ)</label>
                  <input
                    type="number"
                    value="<%= product.shipping_fee %>"
                    min="0"
                    step="0.01"
                    name="shipping_fee"
                    placeholder="Ví dụ: 45.34, 5.5, 70.56,..."
                    required
                    class="form-control"
                    id="shipping"
                  />
                </div>
              </div>

              <div class="col-12">
                <div class="form-group mb-4">
                  <div class="image-box">
                    <div class="mb-4 d-flex jutify-content-end w-100 image-delete-box">
                      <i class="bi bi-x-lg float-end mb-2 image-delete"></i>
                    </div>
                    <div class="d-flex justify-content-center image-upload-box">
                      <img
                        src="<%= product.thumbnail %>"
                        alt="Hiển thị hình ảnh sản phẩm"
                        class="image-upload"
                      />
                    </div>
                  </div>
                  <label for="thumbnail" class="fw-bold"
                    ><span class="text-danger"><b>*</b></span>
                    Ảnh (.png / .jpg)
                  </label>
                  <input
                    type="file"
                    name="thumbnail"
                    accept="image/*"
                    class="form-control"
                    id="thumbnail"
                    input-upload-image
                  />
                </div>
              </div>

              <div class="col-lg-6 col-md-6 col-6">
                <div class="form-group mb-4">
                  <label for="" class="fw-bold d-block"
                    ><span class="text-danger"><b>*</b></span> Trạng thái</label
                  >
                  <input type="radio" name="status" value="active" <% if(product.status ===
                  'active') {%> checked <% } %> class="form-check-input" id="status-active" />
                  <label for="status-active" class="me-4">Hoạt động</label>

                  <input type="radio" name="status" value="inactive" <% if(product.status ===
                  'inactive') {%> checked <% } %> class="form-check-input" id="status-inactive" />
                  <label for="status-inactive">Ngừng hoạt động</label>
                </div>
              </div>

              <div class="col-lg-6 col-md-6 col-6">
                <div class="form-group mb-4">
                  <label for="" class="fw-bold d-block"
                    ><span class="text-danger"><b>*</b></span>
                    Nổi bật
                  </label>
                  <input type="radio" name="featured" value="1" class="form-check-input"
                  id="featured1" <% if(product.featured=== '1') {%> checked <% } %> />
                  <label for="featured1" class="me-4">Có</label>
                  <input type="radio" name="featured" value="0" class="form-check-input"
                  id="featured0" <% if(product.featured === '0') {%> checked <% } %> />
                  <label for="featured0">Ko</label>
                </div>
              </div>
            </div>
            <button type="submit" class="btn btn-outline-primary w-100 form-create">
              <i class="bi bi-pencil-square me-1"></i>Cập nhật sản phẩm
            </button>
          </div>
        </form>
        <% } %>
      </div>
    </div>

    <!-- Script File -->
    <script src="/admin/scripts/sidebarToggle.js"></script>
    <script src="/admin/scripts/activeSidebarLink.js"></script>
    <script src="/admin/scripts/previewImage.js"></script>
    <script src="/admin/scripts/toggleAccountInfo.js"></script>

    <!-- Script Library & Framwork -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/aaf479b433.js" crossorigin="anonymous"></script>
    <script
      src="https://cdn.tiny.cloud/1/j8bmm28z8l7u8m5at9v64rveeytj143ibxpezl0aks1g6uzx/tinymce/8/tinymce.min.js"
      referrerpolicy="origin"
      crossorigin="anonymous"
    ></script>
    <script src="/admin/scripts/tinymce.js"></script>
    <script src="../../../reload/reload.js"></script>
  </body>
</html>
