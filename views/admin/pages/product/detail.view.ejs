<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include("../../partials/seoMeta.view.ejs", { pageTitle: pageTitle}) %>
    
    <!-- Style Library & Framework -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />

    <!-- Style File -->
    <link rel="stylesheet" href="/admin/setup.css" />
    <link rel="stylesheet" href="/admin/styles/partials/alert.css" />
    <link rel="stylesheet" href="/admin/styles/partials/header.css" />
    <link rel="stylesheet" href="/admin/styles/partials/sider.css" />
    <link rel="stylesheet" href="/admin/styles/partials/footer.css" />
  </head>
  <body>
    <%-include("../../partials/header.view.ejs") %>

    <div class="body">
      <%-include("../../partials/sider.view.ejs") %>
      <div class="main">
        <%-include("../../partials/alertMessage.view.ejs") %> <%
        if(roleAuth.permission.includes('product-view')) { %>
        <section class="detail">
          <div class="container-fluid">
            <div class="row">
              <div class="col-lg-4 col-12 detail-img">
                <div class="border p-2 detail-box">
                  <% if(product.thumbnail && product.title) {%>
                  <a href="#" class="img-link"
                    ><img
                      src="<%= product.thumbnail %>"
                      alt="<%= product.title %>"
                      width="100%"
                      class="w-100 aspect-ratio img-img"
                  /></a>
                  <% } %>
                </div>
                <div class="w-100 mt-2 detail-list">
                  <ul class="w-100 px-3 d-flex justify-content-between img-list">
                    <% if(product.images.length > 0) {%> <% for(let i = 0; i <
                    product.images.length; i++) {%>
                    <li class="list-item m-2 p-1 border">
                      <a href="#" class="list-link"
                        ><img src="<%= product.images[i] %>" alt="" width="70px" class="list-img"
                      /></a>
                    </li>
                    <% } %> <% } %>
                  </ul>
                </div>
              </div>

              <div class="col-lg-8 col-12 detail-info">
                <h2 class="detail-title"><% if(product.title) {%><%= product.title %><% } %></h2>

                <div class="d-flex detail-box">
                  <div class="detail-rating d-flex">
                    <% if(product.rating) {%>
                    <div id="rating" class="star-rating me-2" role="rating" data-rating="3">
                      <% for(let i = 1; i <= product.rating; i++) {%>
                      <span class="star" data-value="<%= i %>"
                        ><i class="bi bi-star-fill text-warning"></i
                        ><span class="star-notification"></span>
                      </span>
                      <% } %>
                    </div>
                    <% } else {%>
                    <span>Không có đánh giá</span>
                    <% } %>
                  </div>

                  <div class="mx-4">|</div>

                  <div class="detail-stock">
                    <i class="bi bi-basket me-2 stock-icon"></i>
                    <% if(product.stock) {%><span class=""><%= product.stock %> mặt hàng</span><% }
                    %>
                    <span class="text-success ms-2">trong kho</span>
                  </div>
                </div>

                <div class="detail-price">
                  <div class="mt-3 d-flex align-items-center detail-box">
                    <% if(product.price) {%>
                    <h2>
                      <b class="text-danger"
                        ><i
                          ><%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND'
                          }).format(Number.parseFloat(product.price - (product.price / 100 *
                          product.discount))) %></i
                        ></b
                      >
                      | Giá gốc:
                    </h2>
                    <h2 class="ms-2 text-decoration-line-through">
                      <%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND'
                      }).format(product.price) %>
                    </h2>
                    <% } %>
                  </div>
                  Giảm giá: <b class="ms-2"><%= product.discount %>%</b>
                </div>

                <% if(roleAuth.permission.includes('product-change-status')) { %>
                <div class="detail-status">
                  Trạng thái: <% if(product.status === 'active') {%>
                  <a
                    href="javascript:;"
                    data-id="<%= product._id %>"
                    data-status="active"
                    change-status
                    class="badge text-bg-success"
                    >Hoạt động</a
                  >
                  <% } else {%>
                  <a
                    href="javascript:;"
                    data-id="<%= product._id %>"
                    data-status="inactive"
                    change-status
                    class="badge text-bg-warning"
                    >Ngừng hoạt động</a
                  >
                  <% } %>
                </div>
                <% } %>

                <hr />

                <% if(roleAuth.permission.includes('product-update')) {%>
                <div class="detail-button">
                  <a
                    href="<%= prefixAdmin %>/products/update/<%= product._id %>"
                    data-id="<%= product._id %>"
                    class="btn btn-primary btn-sm btn-update"
                  >
                    <i class="bi bi-pencil-square me-1"></i>Sửa
                  </a>
                </div>
                <%}%>

                <div class="detail-desc mt-2">
                  <% if(product.description) {%>
                  <p><%= product.description %></p>
                  <% } %>
                </div>

                <div class="detail-other">
                  <ul class="list-unstyled other-list">
                    <% if(product.brand) {%>
                    <li class="other-item">
                      <b class="me-5">- Thương hiệu: </b> <%= product.brand %>
                    </li>
                    <% } %> <% if(category) {%>
                    <li class="other-item mt-2">
                      <b class="me-4">- Danh mục: </b> <%= category.title %>
                    </li>
                    <% } %> <% if(product.warranty) {%>
                    <li class="other-item mt-2">
                      <b class="me-4">- Bảo hành: </b> <%= product.warranty %>
                    </li>
                    <% } %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </section>
        <% } %>
      </div>
    </div>

    <% include('../../partials/footer.view.ejs') %>

    <form
      action="<%= prefixAdmin %>/products"
      method="POST"
      class="d-none"
      form-change-status
    ></form>

    <!-- Script File -->
    <script src="/admin/scripts/sidebarToggle.js"></script>
    <script src="/admin/scripts/activeSidebarLink.js"></script>
    <script src="/admin/scripts/changeStatus.js"></script>
    <script src="/admin/scripts/showAlert.js"></script>
    <script src="/admin/scripts/toggleAccountInfo.js"></script>

    <!-- Script Library & Framwork -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/aaf479b433.js" crossorigin="anonymous"></script>
    <script src="../../../reload/reload.js"></script>
  </body>
</html>
