<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include("../../partials/seoMeta.view.ejs", { pageTitle: pageTitle}) %>

    <!-- Style Library & Framework -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />

    <!-- Style File -->
    <link rel="stylesheet" href="/admin/setup.css" />
    <link rel="stylesheet" href="/admin/styles/partials/alert.css" />
    <link rel="stylesheet" href="/admin/styles/partials/header.css" />
    <link rel="stylesheet" href="/admin/styles/partials/sider.css" />
    <link rel="stylesheet" href="/admin/styles/partials/footer.css" />
  </head>
  <body>
    <%-include("../../partials/header.view.ejs") %>

    <div class="body">
      <%-include("../../partials/sider.view.ejs") %>

      <div class="main">
        <%-include("../../partials/alertMessage.view.ejs") %> <%
        if(roleAuth.permission.includes('product-view')) { %>

        <div class="row gap-md-0 gap-2 justify-content-between">
          <div class="col-lg-8 col-md-4 col-12">
            <h1 class="heading-font text-primary py-0 text-start"><%= pageTitle %></h1>
          </div>

          <div class="col-lg-4 col-md-6 col-12">
            <%-include("../../partials/search.view.ejs", { placeholder: "Nhập tên sản phẩm..."}) %>
          </div>
        </div>

        <div class="card mb-3">
          <div class="title-font card-header">Bộ lọc</div>
          <div class="card-body">
            <div class="container-fluid">
              <div class="row gap-md-0 gap-2">
                <div class="col-xxl-3 col-xl-3 col-lg-3 col-md-3 col-sm-12 col-12">
                  <%-include("../../partials/statusFilter.view.ejs") %>
                </div>
                <div class="col-xxl-5 col-xl-5 col-lg-5 col-md-5 col-sm-12 col-12">
                  <%-include("../../partials/categoryFilter.view.ejs") %>
                </div>
                <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-4 col-sm-12 col-12">
                  <%-include("../../partials/priceFilter.view.ejs") %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="card mb-3">
          <div class="title-font card-header">
            Danh sách (trang hiện tại: <%= objPagination.currentPage %>)
          </div>
          <div class="card-body">
            <div class="container-fluid p-2 p-md-2">
              <div class="row gap-md-0 gap-2">
                <div class="col-lg-4 col-12">
                  <%-include("../../partials/changeMulti.view.ejs", { statusList: statusList, url:
                  'products', type: 'product' }) %>
                </div>
                <div class="col-lg-4 col-12">
                  <%-include("../../partials/sort.view.ejs", {sortOption: ['position-asc',
                  'position-desc', 'price-asc', 'price-desc', 'title-asc', 'title-desc']}) %>
                </div>
                <div class="col-lg-4 col-12">
                  <% if(roleAuth.permission.includes('product-add')) {%>
                  <a
                    href="<%= prefixAdmin %>/products/create"
                    class="btn btn-primary w-100 float-end"
                  >
                    <i class="bi bi-plus-lg me-1"></i>Thêm mới sản phẩm
                  </a>
                  <% } %>
                </div>
              </div>
            </div>

            <div class="container-fluid w-100">
              <div class="row">
                <div class="col-12 overflow-x-scroll">
                  <% if (productList.length == 0) {%>
                  <div class="text-center text-white bg-danger p-2">
                    Không tìm thấy sản phẩm nào trong kho
                  </div>
                  <% } %>
                  <table class="table table-hover table-sm w-100">
                    <thead class="content-font">
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        <input type="checkbox" name="checkall" class="me-5" />STT
                      </th>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        Hình ảnh
                      </th>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        Tiêu đề
                      </th>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">Giá</th>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        Người tạo
                      </th>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        Người cập nhật
                      </th>
                      <% if(roleAuth.permission.includes('product-change-status')) {%>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        Trạng thái
                      </th>
                      <% } %>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        Vị trí
                      </th>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        Hành động
                      </th>
                    </thead>

                    <tbody class="content-font">
                      <% productList.forEach((item, index) => { %>
                      <tr title="<%= item.title %>">
                        <td>
                          <input
                            type="checkbox"
                            name="checkid"
                            value="<%= item._id %>"
                            class="me-5"
                          />
                          <%= index + 1 %>
                        </td>
                        <td>
                          <img src="<%= item.thumbnail %>" alt="<%= item.title %>" width="100px" />
                        </td>
                        <td><%= item.title %></td>
                        <td>
                          <b class="fw-bold" style="color: var(--error-color-admin)"
                            ><i
                              ><%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency:
                              'VND' }).format(Number.parseFloat(item.price - (item.price / 100 *
                              item.discount))) %>
                            </i>
                          </b>
                          <span class="text-decoration-line-through"
                            ><%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND'
                            }).format(item.price) %>
                          </span>
                        </td>
                        <td>
                          <p>
                            <i class="fa-solid fa-user me-1"></i><%= item.accountFullNameCreate%>
                          </p>
                          <% if(item.accountFullNameCreate) { %>
                          <p>
                            <i class="fa-solid fa-clock me-1"></i><%=
                            moment(item.createdBy.createdAt).format('DD/MM/YYYY - h:mm:ss')%>
                          </p>
                          <% } else { %>
                          <p>Không tìm thấy</p>
                          <% } %>
                        </td>
                        <td>
                          <% let updatedBy = item.updatedBy.slice(-1)[0] %> <% if(updatedBy) { %>
                          <p>
                            <i class="fa-solid fa-user me-1"></i><%= updatedBy.accountFullNameUpdate
                            %>
                          </p>
                          <p>
                            <i class="fa-solid fa-clock me-1"></i><%=
                            moment(updatedBy.updatedAt).format('DD/MM/YYYY - h:mm:ss')%>
                          </p>
                          <% } else { %>
                          <p>Không tìm thấy</p>
                          <% } %>
                        </td>
                        <% if(roleAuth.permission.includes('product-change-status')) {%>
                        <td>
                          <% if(item.status === 'active') {%>
                          <a
                            href="javascript:;"
                            data-id="<%= item._id %>"
                            data-status="active"
                            change-status
                            class="badge"
                            style="background: var(--success-color-admin)"
                          >
                            Hoạt động
                          </a>
                          <% } else {%>
                          <a
                            href="javascript:;"
                            data-id="<%= item._id %>"
                            data-status="inactive"
                            change-status
                            class="badge"
                            style="background: var(--warning-color-admin)"
                          >
                            Ngừng hoạt động
                          </a>
                          <% } %>
                        </td>
                        <% } %>
                        <td><%= item.position %></td>
                        <td>
                          <% if(roleAuth.permission.includes('product-update')) {%>
                          <a
                            href="<%= prefixAdmin %>/products/update/<%= item._id %>"
                            data-id="<%= item._id %>"
                            class="btn btn-primary btn-sm mb-1 btn-update"
                          >
                            <i class="bi bi-pencil-square me-1"></i>Sửa
                          </a>
                          <% } %>
                          <%#--------------------------------------------------------------------------------%>
                          <% if(roleAuth.permission.includes('product-sort-delete')) {%>
                          <button
                            class="btn btn-danger btn-sm mb-1 ml-1 btn-delete"
                            data-id="<%= item._id %>"
                          >
                            <i class="bi bi-trash3 me-1"></i>Xóa
                          </button>
                          <% } %>
                          <%#--------------------------------------------------------------------------------%>
                          <% if(roleAuth.permission.includes('product-view')) {%>
                          <a
                            href="<%= prefixAdmin %>/products/detail/<%= item._id %>"
                            class="btn btn-outline-black text-black border-black btn-sm mb-1 ml-1 btn-detail"
                          >
                            Chi tiết<i class="bi bi-arrow-right-short ml-1"></i>
                          </a>
                          <% } %>
                        </td>
                      </tr>
                      <% }); %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-9 col-md-9 col-12">
              <%-include("../../partials/pagination.view.ejs") %>
            </div>
            <div class="col-lg-3 col-md-3 col-12">
              <a href="<%= prefixAdmin %>/products/garbage" class="btn btn-primary w-100 float-end"
                ><i class="bi bi-trash me-2"></i>Thùng rác</a
              >
            </div>
          </div>
        </div>

        <% } %>
      </div>
    </div>

    <%-include("../../partials/footer.view.ejs") %>

    <form
      action="<%= prefixAdmin %>/products"
      method="POST"
      class="d-none"
      form-change-status
    ></form>

    <form action="<%= prefixAdmin %>/products" method="POST" class="d-none" form-delete></form>

    <!-- Script File -->
    <script src="/admin/scripts/sidebarToggle.js"></script>
    <script src="/admin/scripts/activeSidebarLink.js"></script>
    <script src="/admin/scripts/statusFilter.js"></script>
    <script src="/admin/scripts/search.js"></script>
    <script src="/admin/scripts/pagination.js"></script>
    <script src="/admin/scripts/displayModalConfirm.js"></script>
    <script src="/admin/scripts/changeStatus.js"></script>
    <script src="/admin/scripts/priceFilter.js"></script>
    <script src="/admin/scripts/delete.js"></script>
    <script src="/admin/scripts/changeMulti.js"></script>
    <script src="/admin/scripts/sort.js"></script>
    <script src="/admin/scripts/showAlert.js"></script>
    <script src="/admin/scripts/toggleAccountInfo.js"></script>

    <!-- Script Library & Framwork -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/aaf479b433.js" crossorigin="anonymous"></script>
    <script src="../reload/reload.js"></script>
  </body>
</html>
