<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include("../../partials/seoMeta.view.ejs", { pageTitle: pageTitle}) %>

    <!-- Style Library & Framework -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />

    <!-- Style File -->
    <link rel="stylesheet" href="/admin/setup.css" />
    <link rel="stylesheet" href="/admin/styles/partials/alert.css" />
    <link rel="stylesheet" href="/admin/styles/partials/header.css" />
    <link rel="stylesheet" href="/admin/styles/partials/sider.css" />
    <link rel="stylesheet" href="/admin/styles/partials/footer.css" />
  </head>
  <body>
    <%-include("../../partials/header.view.ejs") %>

    <div class="body">
      <%-include("../../partials/sider.view.ejs") %>
      <div class="main">
        <%-include("../../partials/alertMessage.view.ejs") %> <%
        if(roleAuth.permission.includes('category-view')) { %>
        <h1 class="heading-font text-primary py-0 text-start"><%= pageTitle %></h1>
        <div class="card mb-3">
          <div class="title-font card-header">Danh sách đơn hàng đã xóa</div>
          <div class="card-body">
            <div class="container-fluid mb-2">
              <div class="row">
                <div class="col-lg-5 col-12">
                  <%-include("../../partials/changeMulti.view.ejs", { statusList: statusList, url:
                  'orders', type: 'order' }) %>
                </div>
              </div>
            </div>

            <div class="container-fluid">
              <div class="row">
                <div class="col-12 overflow-x-scroll">
                  <% if (orderList.length === 0) {%>
                  <div class="text-center text-white bg-danger p-2">
                    <i class="bi bi-trash2 me-1"></i>Thùng rác trống
                  </div>
                  <% } %>
                  <table class="table table-hover table-sm w-100">
                    <thead class="content-font">
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        <input type="checkbox" name="checkall" class="me-5" />STT
                      </th>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        Mã đơn hàng
                      </th>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        Người đặt hàng
                      </th>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        Người nhận hàng
                      </th>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        Tổng tiền
                      </th>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        Thanh toán
                      </th>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        Trạng thái
                      </th>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        Ngày đặt
                      </th>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        Vị trí
                      </th>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        Hành động
                      </th>
                    </thead>

                    <tbody class="content-font">
                      <% if (orderList && orderList.length > 0) { %> <% orderList.forEach((order,
                      index) => { %>
                      <tr>
                        <td>
                          <input
                            type="checkbox"
                            name="checkid"
                            value="<%= order._id %>"
                            class="me-5"
                          /><%= index + 1 %>
                        </td>
                        <td class="fw-bold"><%= order.orderCode %></td>
                        <td>
                          <div class="text-wrap"><i class="fa-solid fa-user me-1"></i><%= order.userOrderName %></div>
                          <div class="text-wrap"><i class="fa-solid fa-envelope me-1"></i><%= order.userOrderEmail %></div>
                        </td>
                        <td>
                          <div><i class="fa-solid fa-user me-1"></i><%= order.userInfo.fullname %></div>
                          <div><i class="fa-solid fa-phone me-1"></i><%= order.userInfo.phone %></div>
                        </td>
                        <td class="fw-bold text-warning">
                          <%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND'
                          }).format(order.total) %>
                        </td>
                        <% if (order.paymentMethod === 'online') { %>
                        <td>Thanh toán online</td>
                        <% } else { %>
                        <td><span class="badge bg-warning text-wrap">Thanh toán khi nhận hàng</span></td>
                        <% } %>
                        <td>
                          <div class="d-flex align-items-center gap-2">
                            <select
                              name="status"
                              id="status"
                              data-id="<%= order._id %>"
                              change-status-select
                              class="badge p-2 form-control"
                              <% if (order.status === 'pending') { %>
                                style="color: var(--warning-color-admin); border-color: var(--warning-color-admin)"
                              <% } else if (order.status === 'confirmed') { %>
                                style="color: var(--info-color-admin); border-color: var(--info-color-admin)"
                              <% } else if (order.status === 'shipping') { %>
                                style="color: var(--primary-color-admin); border-color: var(--primary-color-admin)"
                              <% } else if (order.status === 'delivered') { %>
                                style="color: var(--secondary-color-admin); border-color: var(--secondary-color-admin)"
                              <% } else if (order.status === 'paid') { %>
                                style="color: var(--success-color-admin); border-color: var(--success-color-admin)"
                              <% } else if (order.status === 'cancelled') { %>
                                style="color: var(--error-color-admin); border-color: var(--error-color-admin)"
                              <% } %>
                              value="<%= order.status %>"
                            >
                              <option
                                <% if (order.status === 'pending') { %> selected <% } %>
                                value="pending"
                                class="text-light"
                                style="background: var(--warning-color-admin)"
                              >
                                Chờ xác nhận
                              </option>
                              <option
                                <% if (order.status === 'confirmed') { %> selected <% } %>
                                value="confirmed"
                                class="text-light"
                                style="background: var(--info-color-admin)"
                              >
                                Đã xác nhận
                              </option>
                              <option
                                <% if (order.status === 'shipping') { %> selected <% } %>
                                value="shipping"
                                class="text-light"
                                style="background: var(--primary-color-admin)"
                              >
                                Đang giao
                              </option>
                              <option
                                <% if (order.status === 'delivered') { %> selected <% } %>
                                value="delivered"
                                class="text-light"
                                style="background: var(--secondary-color-admin)"
                              >
                                Đã giao
                              </option>
                              <option
                                <% if (order.status === 'paid') { %> selected <% } %>
                                value="paid"
                                class="text-light"
                                style="background: var(--success-color-admin)"
                              >
                                Đã thanh toán
                              </option>
                              <option
                                <% if (order.status === 'cancelled') { %> selected <% } %>
                                value="cancelled"
                                class="text-light"
                                style="background: var(--error-color-admin)"
                              >
                                Đã hủy
                              </option>
                            </select>
                          </div>
                        </td>
                        <td><%= moment(order.createdAt).format('DD/MM/YYYY - h:mm:ss') %></td>
                        <td><%= order.position %></td>
                        <td>
                          <% if(roleAuth.permission.includes("order-restore")) { %>
                          <button
                            class="btn btn-primary btn-sm mb-1 btn-restore"
                            data-id="<%= order._id %>"
                          >
                            <i class="bi bi-arrow-clockwise me-1"></i>Khôi phục
                          </button>
                          <% } %> <% if(roleAuth.permission.includes("order-hard-delete")) { %>
                          <button
                            class="btn btn-danger btn-sm mb-1 ml-1 btn-delete"
                            data-id="<%= order._id %>"
                          >
                            <i class="bi bi-trash3 me-1"></i>Xóa vĩnh viễn
                          </button>
                          <% } %>
                        </td>
                      </tr>
                      <% }) %> <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>

    <%-include("../../partials/footer.view.ejs") %>

    <form
      action="<%= prefixAdmin %>/orders"
      method="POST"
      class="d-none"
      form-restore
    ></form>

    <form
      action="<%= prefixAdmin %>/orders"
      method="POST"
      class="d-none"
      form-delete-hard
    ></form>

    <!-- Script File -->
    <script src="/admin/scripts/showAlert.js"></script>
    <script src="/admin/scripts/sidebarToggle.js"></script>
    <script src="/admin/scripts/activeSidebarLink.js"></script>
    <script src="/admin/scripts/deleteGarbage.js"></script>
    <script src="/admin/scripts/restoreGarbage.js"></script>
    <script src="/admin/scripts/changeMulti.js"></script>
    <script src="/admin/scripts/toggleAccountInfo.js"></script>

    <!-- Script Library & Framwork -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/aaf479b433.js" crossorigin="anonymous"></script>
    <script src="../../reload/reload.js"></script>
  </body>
</html>
