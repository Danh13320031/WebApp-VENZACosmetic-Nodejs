<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include("../../partials/seoMeta.view.ejs", { pageTitle: pageTitle}) %>

    <!-- Style Library & Framework -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />

    <!-- Style File -->
    <link rel="stylesheet" href="/admin/setup.css" />
    <link rel="stylesheet" href="/admin/styles/partials/alert.css" />
    <link rel="stylesheet" href="/admin/styles/partials/header.css" />
    <link rel="stylesheet" href="/admin/styles/partials/sider.css" />
    <link rel="stylesheet" href="/admin/styles/partials/footer.css" />
  </head>
  <body>
    <%-include("../../partials/header.view.ejs") %>

    <div class="body">
      <%-include("../../partials/sider.view.ejs") %>

      <div class="main">
        <%-include("../../partials/alertMessage.view.ejs") %>

        <% if(roleAuth.permission.includes("order-view")) { %>

        <div class="row gap-md-0 gap-2 justify-content-between">
          <div class="col-lg-8 col-md-4 col-12">
            <h1 class="heading-font text-primary py-0 text-start"><%= pageTitle %></h1>
          </div>

          <div class="col-lg-4 col-md-6 col-12">
            <%-include("../../partials/search.view.ejs", { placeholder: "Nhập mã đơn hàng..."}) %>  
          </div>
        </div>

        <div class="card mb-3">
          <div class="title-font card-header">Bộ lọc</div>
          <div class="card-body">
            <div class="container-fluid">
              <div class="row gap-md-0 gap-2">
                <div class="col-12">
                  <%-include("../../partials/statusFilter.view.ejs") %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="card mb-3">
          <div class="title-font card-header">Danh sách (trang hiện tại: <%= objPagination.currentPage %>)</div>
          <div class="card-body">
            <div class="container-fluid p-2 p-md-2">
              <div class="row gap-md-0 gap-2">
                <div class="col-lg-4 col-12">
                  <%-include("../../partials/changeMulti.view.ejs", { statusList: statusList, type: 'order', url: 'orders' }) %>
                </div>
                <div class="col-lg-4 col-12">
                  <%-include("../../partials/sort.view.ejs", { 
                    sortOption: ['createdAt-desc', 'createdAt-asc', 'position-asc', 'position-desc', 'total-asc', 'total-desc', 'orderCode-asc', 'orderCode-desc'] 
                  }) %>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12 col-12">
                  <%-include("../../partials/priceFilter.view.ejs") %>
                </div>
              </div>
            </div>

            <div class="container-fluid w-100">
              <div class="row">
                <div class="col-12 overflow-x-scroll">
                  <table class="table table-hover table-sm w-100">
                    <thead class="content-font">
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        <input type="checkbox" name="checkall" class="me-5" />
                      </th>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        Mã đơn hàng
                      </th>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        Người đặt hàng
                      </th>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        Người nhận hàng
                      </th>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        Tổng tiền
                      </th>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        Trạng thái đơn hàng
                      </th>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        Phương thức thanh toán
                      </th>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        Trạng thái thanh toán
                      </th>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        Ngày đặt
                      </th>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        Hành động
                      </th>
                    </thead>

                    <tbody class="content-font">
                      <% if (orderList && orderList.length > 0) { %> <% orderList.forEach((order,
                      index) => { %>
                      <tr>
                        <td>
                          <input
                            type="checkbox"
                            name="checkid"
                            value="<%= order._id %>"
                            class="me-5"
                          />
                        </td>
                        <td class="fw-bold"><%= order.orderCode %></td>
                        <td>
                          <div class="text-wrap"><i class="fa-solid fa-user me-1"></i><%= order.userOrderInfo.fullname %></div>
                          <div class="text-wrap"><i class="fa-solid fa-envelope me-1"></i><%= order.userOrderInfo.email %></div>
                        </td>
                        <td>
                          <div><i class="fa-solid fa-user me-1"></i><%= order.userConsigneeInfo.fullname %></div>
                          <div><i class="fa-solid fa-phone me-1"></i><%= order.userConsigneeInfo.phone %></div>
                        </td>
                        <td class="fw-bold text-warning">
                          <%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND'
                          }).format(order.total) %>
                        </td>
                        <td>
                          <div class="d-flex align-items-center gap-2">
                            <select
                              name="orderStatus"
                              id="status"
                              data-id="<%= order._id %>"
                              change-status-select
                              class="badge p-2 form-control"
                              <% if (order.status === 'pending') { %>
                                style="color: var(--warning-color-admin); border-color: var(--warning-color-admin)"
                              <% } else if (order.status === 'confirmed') { %>
                                style="color: var(--info-color-admin); border-color: var(--info-color-admin)"
                              <% } else if (order.status === 'shipping') { %>
                                style="color: var(--primary-color-admin); border-color: var(--primary-color-admin)"
                              <% } else if (order.status === 'delivered') { %>
                                style="color: var(--success-color-admin); border-color: var(--success-color-admin)"
                              <% } else if (order.status === 'cancelled') { %>
                                style="color: var(--error-color-admin); border-color: var(--error-color-admin)"
                              <% } %>
                              value="<%= order.status %>"
                            >
                              <option
                                <% if (order.status === 'pending') { %> selected <% } %>
                                value="pending"
                                class="text-light"
                                style="background: var(--warning-color-admin)"
                              >
                                Chờ xác nhận
                              </option>
                              <option
                                <% if (order.status === 'confirmed') { %> selected <% } %>
                                value="confirmed"
                                class="text-light"
                                style="background: var(--info-color-admin)"
                              >
                                Đã xác nhận
                              </option>
                              <option
                                <% if (order.status === 'shipping') { %> selected <% } %>
                                value="shipping"
                                class="text-light"
                                style="background: var(--primary-color-admin)"
                              >
                                Đang giao
                              </option>
                              <option
                                <% if (order.status === 'delivered') { %> selected <% } %>
                                value="delivered"
                                class="text-light"
                                style="background: var(--success-color-admin)"
                              >
                                Đã giao
                              </option>
                              <option
                                <% if (order.status === 'cancelled') { %> selected <% } %>
                                value="cancelled"
                                class="text-light"
                                style="background: var(--error-color-admin)"
                              >
                                Đã hủy
                              </option>
                            </select>
                          </div>
                        </td>
                        <% if (order.payments.method === 'online') { %>
                        <td><span class="badge text-wrap" style="background: var(--info-color-admin);">Thanh toán trực tuyến - <%= order.payments.bank %></span></td>
                        <% } else { %>
                        <td>
                          <div class="badge text-wrap" style="background: var(--warning-color-admin);">Thanh toán khi nhận hàng</div>
                        </td>
                        <% } %>
                        <td>
                          <div class="d-flex align-items-center gap-2">
                            <select
                              name="paymentStatus"
                              id="status"
                              data-id="<%= order._id %>"
                              change-status-select
                              class="badge p-2 form-control"
                              <% if (order.payments.status === 'pending') { %>
                                style="color: var(--secondary-color-admin); border-color: var(--secondary-color-admin)"
                              <% } else if (order.payments.status === 'success') { %>
                                style="color: var(--success-color-admin); border-color: var(--success-color-admin)"
                              <% } else if (order.payments.status === 'failed') { %>
                                style="color: var(--error-color-admin); border-color: var(--error-color-admin)"
                              <% } else if (order.payments.status === 'refunded') { %>
                                style="color: var(--info-color-admin); border-color: var(--info-color-admin)"
                              <% } %>
                              value="<%= order.payments.status %>"
                            >
                              <option
                                <% if (order.payments.status === 'pending') { %> selected <% } %>
                                value="pending"
                                class="text-light"
                                style="background: var(--secondary-color-admin)"
                              >
                                Chưa thanh toán
                              </option>
                              <option
                                <% if (order.payments.status === 'success') { %> selected <% } %>
                                value="success"
                                class="text-light"
                                style="background: var(--success-color-admin)"
                              >
                                Đã thanh toán
                              </option>
                              <option
                                <% if (order.payments.status === 'failed') { %> selected <% } %>
                                value="failed"
                                class="text-light"
                                style="background: var(--error-color-admin)"
                              >
                                Thất bại
                              </option>
                              <option
                                <% if (order.payments.status === 'refunded') { %> selected <% } %>
                                value="refunded"
                                class="text-light"
                                style="background: var(--info-color-admin)"
                              >
                                Đã hoàn tiền
                              </option>
                            </select>
                          </div>
                        </td>
                        <td><%= moment(order.createdAt).format('DD/MM/YYYY - h:mm:ss') %></td>
                        <td>
                          <div class="d-flex flex-wrap gap-1">
                            <a
                            href="<%= prefixAdmin %>/orders/update/<%= order._id %>"
                            data-id="<%= order._id %>"
                            class="btn btn-primary btn-sm btn-update"
                          >
                            <i class="bi bi-pencil-square me-1"></i>Sửa
                          </a>
                          <button
                            class="btn btn-danger btn-sm ml-1 btn-delete"
                            data-id="<%= order._id %>"
                          >
                            <i class="bi bi-trash3 me-1"></i>Xóa
                          </button>
                          <a
                            href="<%= prefixAdmin %>/orders/detail/<%= order._id %>"
                            class="btn btn-outline-black text-black border-black btn-sm"
                            >Chi tiết<i class="bi bi-arrow-right-short ml-1"></i></a>
                          <a
                            href="<%= prefixAdmin %>/orders/print/<%= order._id %>"
                            class="btn btn-outline-black text-black border-black btn-sm btn-print"
                          >
                            <i class="bi bi-printer"></i>
                          </a>
                          </div>
                        </td>
                      </tr>
                      <% }) %> <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-9 col-md-9 col-12">
              <%-include("../../partials/pagination.view.ejs") %>
            </div>
            <div class="col-lg-3 col-md-3 col-12">
              <a href="<%= prefixAdmin %>/orders/garbage" class="btn btn-primary w-100 float-end">
                <i class="bi bi-trash me-2"></i>
                Thùng rác
              </a>
            </div>
          </div>
        </div>

        <% } %>
      </div>
    </div>

    <%-include("../../partials/footer.view.ejs") %>

    <form action="<%= prefixAdmin %>/orders/order-change-status" method="POST" class="d-none" form-order-change-status-select></form>
    <form action="<%= prefixAdmin %>/orders/payment-change-status" method="POST" class="d-none" form-payment-change-status-select></form>
    <form action="<%= prefixAdmin %>/orders" method="POST" class="d-none" form-delete></form>

    <!-- Script File -->
    <script src="/admin/scripts/showAlert.js"></script>
    <script src="/admin/scripts/sidebarToggle.js"></script>
    <script src="/admin/scripts/statusFilter.js"></script>
    <script src="/admin/scripts/search.js"></script>
    <script src="/admin/scripts/sort.js"></script>
    <script src="/admin/scripts/priceFilter.js"></script>
    <script src="/admin/scripts/changeMulti.js"></script>
    <script src="/admin/scripts/pagination.js"></script>
    <script src="/admin/scripts/delete.js"></script>
    <script src="/admin/scripts/order/changeStatusSelect.js"></script>
    <script src="/admin/scripts/activeSidebarLink.js"></script>
    <script src="/admin/scripts/toggleAccountInfo.js"></script>

    <!-- Script Library & Framwork -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/aaf479b433.js" crossorigin="anonymous"></script>
    <script src="../reload/reload.js"></script>
  </body>
</html>
