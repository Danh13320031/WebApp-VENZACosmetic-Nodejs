<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include("../../partials/seoMeta.view.ejs", { pageTitle: pageTitle}) %>

    <!-- Style Library & Framework -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />

    <!-- Style File -->
    <link rel="stylesheet" href="/admin/setup.css" />
    <link rel="stylesheet" href="/admin/styles/partials/alert.css" />
    <link rel="stylesheet" href="/admin/styles/partials/header.css" />
    <link rel="stylesheet" href="/admin/styles/partials/sider.css" />
    <link rel="stylesheet" href="/admin/styles/partials/footer.css" />
  </head>
  <body>
    <%-include("../../partials/header.view.ejs") %>

    <div class="body">
      <%-include("../../partials/sider.view.ejs") %>
      <div class="main">
        <%-include("../../partials/alertMessage.view.ejs") %> <%
        if(roleAuth.permission.includes('category-update')) { %>
        <h1 class="heading-font text-primary py-0 text-start"><%= pageTitle %></h1>
        <form
          action="<%= prefixAdmin %>/product-categories/update/<%= category._id %>?_method=PATCH"
          method="POST"
          enctype="multipart/form-data"
          id="form-handle"
        >
          <div class="container-fluid">
            <div class="row">
              <div class="col-6">
                <div class="form-group mb-4">
                  <label for="title" class="fw-bold"
                    ><span class="text-danger"><b>*</b></span>
                    Tiêu đề
                  </label>
                  <input
                    type="text"
                    value="<%= category.title %>"
                    name="title"
                    id="title"
                    required
                    class="form-control"
                  />
                </div>
              </div>
              <div class="col-6">
                <div class="form-group mb-4">
                  <label for="parent_id" class="fw-bold">Danh mục cha</label>
                  <%# <input type="text" name="parent_id" id="parent_id" class="form-control" /> %>
                  <select name="parent_id" id="parent_id" class="form-control">
                    <option disabled>-- Chọn danh mục cha --</option>
                    <% if(categoryList.length > 0) {%>
                    <%-include("../../partials/selecttree.view.ejs", {categoryList, level: 1,
                    parent_id: category.parent_id}) %> <% } %>
                  </select>
                </div>
              </div>
              <div class="col-12">
                <div class="form-group mb-4">
                  <label for="description" class="fw-bold">Mô tả</label>
                  <textarea name="description" id="description" rows="5" class="form-control">
                    <%= category.description %>
                  </textarea>
                </div>
              </div>
              <div class="col-12">
                <div class="form-group mb-4">
                  <label for="position" class="fw-bold">Vị trí</label>
                  <input
                    type="number"
                    value="<%= category.position %>"
                    name="position"
                    min="1"
                    placeholder="Tự động tăng"
                    class="form-control"
                    id="position"
                  />
                </div>
              </div>
              <div class="col-12">
                <div class="form-group mb-4">
                  <div class="image-box">
                    <div class="mb-4 d-flex jutify-content-end w-100 image-delete-box">
                      <i class="bi bi-x-lg float-end mb-2 image-delete"></i>
                    </div>
                    <div class="d-flex justify-content-center image-upload-box">
                      <img
                        src="<%= category.thumbnail %>"
                        alt="Hiển thị hình ảnh sản phẩm"
                        class="image-upload"
                      />
                    </div>
                  </div>
                  <label for="thumbnail" class="fw-bold">Ảnh (.png / .jpg)</label>
                  <input
                    type="file"
                    name="thumbnail"
                    accept="image/*"
                    class="form-control"
                    id="thumbnail"
                    input-upload-image
                  />
                </div>
              </div>
              <div class="col-12">
                <div class="form-group mb-4">
                  <label for="" class="fw-bold d-block"
                    ><span class="text-danger"><b>*</b></span> Trạng thái</label
                  >
                  <input type="radio" name="status" value="active" <% if(category.status ===
                  'active') {%>checked<% } %> class="form-check-input bg-success" id="status-active"
                  />
                  <label for="status-active" class="me-4">Hoạt động</label>
                  <input type="radio" name="status" value="inactive" <% if(category.status ===
                  'inactive') {%>checked<% } %> class="form-check-input bg-warning"
                  id="status-inactive" />
                  <label for="status-inactive">Ngừng hoạt động</label>
                </div>
              </div>
            </div>
            <button type="submit" class="btn btn-outline-primary w-100 form-create">
              <i class="bi bi-pencil-square me-1"></i>Cập nhật danh mục
            </button>
          </div>
        </form>
        <% } %>
      </div>
    </div>

    <%-include('../../partials/footer.view.ejs') %>

    <!-- Script File -->
    <script src="/admin/scripts/showAlert.js"></script>
    <script src="/admin/scripts/sidebarToggle.js"></script>
    <script src="/admin/scripts/activeSidebarLink.js"></script>
    <script src="/admin/scripts/previewImage.js"></script>
    <script src="/admin/scripts/showAlert.js"></script>
    <script src="/admin/scripts/toggleAccountInfo.js"></script>

    <!-- Script Library & Framwork -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/aaf479b433.js" crossorigin="anonymous"></script>
    <script src="../../reload/reload.js"></script>
  </body>
</html>
