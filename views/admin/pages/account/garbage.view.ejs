<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include("../../partials/seoMeta.view.ejs", { pageTitle: pageTitle}) %>

    <!-- Style Library & Framework -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />

    <!-- Style File -->
    <link rel="stylesheet" href="/admin/setup.css" />
    <link rel="stylesheet" href="/admin/styles/partials/alert.css" />
    <link rel="stylesheet" href="/admin/styles/partials/header.css" />
    <link rel="stylesheet" href="/admin/styles/partials/sider.css" />
    <link rel="stylesheet" href="/admin/styles/partials/footer.css" />
  </head>
  <body>
    <%-include("../../partials/header.view.ejs") %>

    <div class="body">
      <%-include("../../partials/sider.view.ejs") %>
      <div class="main">
        <%-include("../../partials/alertMessage.view.ejs") %> <%
        if(roleAuth.permission.includes("account-view")) { %>
        <h1 class="heading-font text-primary py-0 text-start"><%= pageTitle %></h1>
        <div class="card mb-3">
          <div class="title-font card-header">Danh sách tài khoản đã xóa</div>
          <div class="card-body">
            <div class="container-fluid mb-2">
              <div class="row">
                <div class="col-lg-5 col-12">
                  <%-include("../../partials/changeMulti.view.ejs", { statusList: statusList, url:
                  'accounts', type: 'account' }) %>
                </div>
              </div>
            </div>

            <div class="container-fluid">
              <div class="row">
                <div class="col-12 overflow-x-scroll">
                  <% if (accountList.length == 0) {%>
                  <div class="text-center text-white bg-danger p-2">
                    <i class="bi bi-trash2 me-1"></i>Thùng rác trống
                  </div>
                  <% } %>
                  <table class="table table-hover table-sm">
                    <thead class="content-font">
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        <input type="checkbox" name="checkall" class="me-5" />STT
                      </th>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        Ảnh đại diện
                      </th>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        Họ & Tên
                      </th>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        Vai trò
                      </th>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        Trạng thái
                      </th>
                      <% if(roleAuth.permission.includes("account-restore") ||
                      roleAuth.permission.includes("account-hard-delete")) { %>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        Hành động
                      </th>
                      <% } %>
                    </thead>

                    <tbody class="content-font">
                      <% accountList.forEach((account, index) => { %>
                      <tr title="<%= account.title %>">
                        <td>
                          <input
                            type="checkbox"
                            name="checkid"
                            value="<%= account._id %>"
                            class="me-5"
                          />
                          <%= index + 1 %>
                        </td>
                        <td>
                          <img
                            src="<%= account.avatar %>"
                            alt="<%= account.fullName %>"
                            width="100px"
                          />
                        </td>
                        <td><%= account.fullName %></td>
                        <td><%= account.roleId %></td>
                        <td>
                          <% if(account.status === 'active') {%>
                          <a
                            href="javascript:;"
                            data-id="<%= account._id %>"
                            data-status="active"
                            change-status
                            class="badge"
                            style="background: var(--success-color-admin)"
                            >Hoạt động</a
                          >
                          <% } else {%>
                          <a
                            href="javascript:;"
                            data-id="<%= account._id %>"
                            data-status="inactive"
                            change-status
                            class="badge"
                            style="background: var(--warning-color-admin)"
                            >Ngừng hoạt động</a
                          >
                          <% } %>
                        </td>
                        <td>
                          <% if(roleAuth.permission.includes("account-restore")) { %>
                          <button
                            class="btn btn-primary btn-sm mb-1 btn-restore"
                            data-id="<%= account._id %>"
                          >
                            <i class="bi bi-arrow-clockwise me-1"></i>Khôi phục
                          </button>
                          <% } %> <% if(roleAuth.permission.includes("account-hard-delete")) { %>
                          <button
                            class="btn btn-danger btn-sm mb-1 ml-1 btn-delete"
                            data-id="<%= account._id %>"
                          >
                            <i class="bi bi-trash3 me-1"></i>Xóa vĩnh viễn
                          </button>
                          <% } %>
                        </td>
                      </tr>
                      <% }); %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% } %>

        <form
          action="<%= prefixAdmin %>/accounts"
          method="POST"
          class="d-none"
          form-restore-product
        ></form>

        <form
          action="<%= prefixAdmin %>/accounts"
          method="POST"
          class="d-none"
          form-delete-product
        ></form>
      </div>
    </div>

    <%-include("../../partials/footer.view.ejs") %>

    <!-- Script File -->
    <script src="/admin/scripts/showAlert.js"></script>
    <script src="/admin/scripts/sidebarToggle.js"></script>
    <script src="/admin/scripts/activeSidebarLink.js"></script>
    <script src="/admin/scripts/deleteGarbage.js"></script>
    <script src="/admin/scripts/restoreGarbage.js"></script>
    <script src="/admin/scripts/changeMulti.js"></script>
    <script src="/admin/scripts/toggleAccountInfo.js"></script>

    <!-- Script Library & Framwork -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/aaf479b433.js" crossorigin="anonymous"></script>
    <script src="../../reload/reload.js"></script>
  </body>
</html>
