<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include("../../partials/seoMeta.view.ejs", { pageTitle: pageTitle}) %>
    
    <!-- Style Library & Framework -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />

    <!-- Style File -->
    <link rel="stylesheet" href="/admin/setup.css" />
    <link rel="stylesheet" href="/admin/styles/partials/alert.css" />
    <link rel="stylesheet" href="/admin/styles/partials/header.css" />
    <link rel="stylesheet" href="/admin/styles/partials/sider.css" />
    <link rel="stylesheet" href="/admin/styles/partials/footer.css" />
  </head>
  <body>
    <%-include("../../partials/header.view.ejs") %>

    <div class="body">
      <%-include("../../partials/sider.view.ejs") %>
      <div class="main">
        <%-include("../../partials/alertMessage.view.ejs") %>
        <% if(roleAuth.permission.includes("account-update")) { %>
          <h1 class="heading-font text-primary py-0 text-start"><%= pageTitle %></h1>
        <form
          action="<%= prefixAdmin %>/accounts/update/<%= account._id %>?_method=PATCH"
          method="POST"
          enctype="multipart/form-data"
          id="form-handle"
        >
          <div class="container-fluid">
            <div class="row">
              <div class="col-12">
                <div class="form-group mb-4">
                  <label for="fullName" class="fw-bold"
                    ><span class="text-danger"><b>*</b></span class="fw-bold"> Họ & Tên</label
                  >
                  <input
                    type="text"
                    name="fullName"
                    value="<%= account.fullName %>"
                    required
                    id="fullName"
                    class="form-control"
                  />
                </div>
              </div>
              <div class="col-6 mb-4">
                <div class="form-group">
                  <label for="email" class="fw-bold"
                    ><span class="text-danger"><b>*</b></span> Địa chỉ email</label
                  >
                  <input
                    type="email"
                    name="email"
                    value="<%= account.email %>"
                    required
                    id="email"
                    class="form-control"
                  />
                </div>
              </div>
              <div class="col-6">
                <div class="form-group mb-4">
                  <label for="password" class="fw-bold"
                    ><span class="text-danger"><b>*</b></span> Mật khẩu</label
                  >
                  <input
                    type="password"
                    name="password"
                    id="password"
                    class="form-control"
                  />
                </div>
              </div>
              <div class="col-12">
                <div class="image-box mb-4">
                  <div class="mb-4 d-flex jutify-content-end w-100 image-delete-box">
                    <i class="bi bi-x-lg float-end mb-2 image-delete"></i>
                  </div>
                  <div class="d-flex justify-content-center image-upload-box">
                    <img
                      src="<%= account.avatar %>"
                      alt="Hiển thị hình ảnh đại diện"
                      class="image-upload"
                    />
                  </div>
                </div>
              </div>
              <div class="col-6">
                <div class="form-group mb-4">
                  <label for="phone" class="fw-bold"
                    ><span class="text-danger"><b>*</b></span> Số điện thoại</label
                  >
                  <input
                    type="phone"
                    name="phone"
                    value="<%= account.phone %>"
                    required
                    id="phone"
                    class="form-control"
                  />
                </div>
              </div>
              <div class="col-6">
                <div class="form-group mb-4">
                  <label for="avatar" class="fw-bold">Ảnh đại diện</label>
                  <input
                    type="file"
                    name="avatar"
                    accept="image/*"
                    id="avatar"
                    class="form-control"
                    input-upload-image
                  />
                </div>
              </div>
              <div class="col-6">
                <div class="form-group mb-4">
                  <label for="birthDay" class="fw-bold"
                    ><span class="text-danger"><b>*</b></span> Ngày sinh</label
                  >
                  <input
                    type="date"
                    name="birthDay"
                    value="<%= account.birthDay %>"
                    id="birthDay"
                    class="form-control"
                  />
                </div>
              </div>
              <div class="col-6">
                <div class="form-group mb-4">
                  <label for="roleId" class="fw-bold"
                    ><span class="text-danger"><b>*</b></span> Phân quyền</label
                  >
                  <select name="roleId" id="roleId" class="form-control">
                    <option disabled>-- Lựa chọn quyền --</option>
                    <% roleList.forEach(role => { %>
                        <option value="<%= role._id %>" <% if(role._id == account.roleId) { %>selected<% } %>><%= role.title %></option>
                    <%}); %>
                  </select>
                </div>
              </div>
              <div class="col-12">
                <div class="form-group mb-4">
                  <label for="status" class="fw-bold"
                    ><span class="text-danger"><b>*</b></span> Trạng thái</label
                  >
                  <select name="status" id="status" class="form-control">
                    <option disabled>-- Lựa chọn trạng thái --</option>
                    <option value="active" <% if(account.status === 'active') {%>selected<% } %>>Hoạt động</option>
                    <option value="inactive" <% if(account.status === 'inactive') {%>selected<% } %>>Ngừng hoạt động</option>
                  </select>
                </div>
              </div>
            </div>
            <button type="submit" class="btn btn-outline-primary w-100 form-create">
              <i class="bi bi-pencil-square me-1"></i>Cập nhật tài khoản
            </button>
          </div>
        </form>
        <% } %>
      </div>
    </div>

    <%-include('../../partials/footer.view.ejs') %>

    <!-- Script File -->
    <script src="/admin/scripts/showAlert.js"></script>
    <script src="/admin/scripts/sidebarToggle.js"></script>
    <script src="/admin/scripts/activeSidebarLink.js"></script>
    <script src="/admin/scripts/previewImage.js"></script>
    <script src="/admin/scripts/showAlert.js"></script>
    <script src="/admin/scripts/toggleAccountInfo.js"></script>

    <!-- Script Library & Framwork -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/aaf479b433.js" crossorigin="anonymous"></script>
    <script src="../../../reload/reload.js"></script>
  </body>
</html>
